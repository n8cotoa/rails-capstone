<h1>Chat Room For Group <%= @chat_room.group_id %></h1>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>

<div class="ui form">
  <%= form_for @message, url: '#' do |f| %>
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <%= f.submit "Post", class: 'ui button' %>
  <% end %>
</div>
